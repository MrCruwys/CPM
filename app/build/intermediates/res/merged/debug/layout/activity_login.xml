<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrcruwys.cpm.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:text="@string/enter_passcode"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/txt_title"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/txt_passcode"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:textColor="?attr/editTextColor"
        android:background="?attr/editTextBackground"
        android:textAppearance="?android:attr/textAppearanceInverse"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="288dp"
        android:layout_height="45sp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:text="@string/empty"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_passcode" />

    <Button
        android:id="@+id/btn_e"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="@string/e"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_t"
        app:layout_constraintTop_toBottomOf="@+id/txt_message"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_t"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:text="@string/t"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_e"
        app:layout_constraintLeft_toRightOf="@+id/btn_e"
        app:layout_constraintRight_toLeftOf="@+id/btn_a"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_a"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:text="@string/a"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_e"
        app:layout_constraintLeft_toRightOf="@+id/btn_t"
        app:layout_constraintRight_toLeftOf="@+id/btn_o"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_o"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:text="@string/o"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_e"
        app:layout_constraintLeft_toRightOf="@+id/btn_a"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_n"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:text="@string/n"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_r"
        app:layout_constraintTop_toBottomOf="@+id/btn_e"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_r"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:text="@string/r"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_n"
        app:layout_constraintLeft_toRightOf="@+id/btn_n"
        app:layout_constraintRight_toLeftOf="@+id/btn_i"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_i"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:text="@string/i"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_n"
        app:layout_constraintLeft_toRightOf="@+id/btn_r"
        app:layout_constraintRight_toLeftOf="@+id/btn_s"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_s"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:text="@string/s"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_n"
        app:layout_constraintLeft_toRightOf="@+id/btn_i"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_h"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:text="@string/h"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_zero"
        app:layout_constraintTop_toBottomOf="@+id/btn_n"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_zero"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:text="@string/zero"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_h"
        app:layout_constraintLeft_toRightOf="@+id/btn_h"
        app:layout_constraintRight_toLeftOf="@+id/btn_one"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_one"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:text="@string/one"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_h"
        app:layout_constraintLeft_toRightOf="@+id/btn_zero"
        app:layout_constraintRight_toLeftOf="@+id/btn_two"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_two"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:text="@string/two"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_h"
        app:layout_constraintLeft_toRightOf="@+id/btn_one"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_star"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:text="@string/star"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_hash"
        app:layout_constraintTop_toBottomOf="@+id/btn_h"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_hash"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:text="@string/hash"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_star"
        app:layout_constraintLeft_toRightOf="@+id/btn_star"
        app:layout_constraintRight_toLeftOf="@+id/btn_at"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_at"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:text="@string/at"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_star"
        app:layout_constraintLeft_toRightOf="@+id/btn_hash"
        app:layout_constraintRight_toLeftOf="@+id/btn_percent"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_percent"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:text="@string/percent"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_star"
        app:layout_constraintLeft_toRightOf="@+id/btn_at"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:text="@string/clear"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_enter"
        app:layout_constraintTop_toBottomOf="@+id/btn_star"
        tools:ignore="RtlHardcoded,SpUsage" />

    <Button
        android:id="@+id/btn_enter"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:text="@string/enter"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_clear"
        app:layout_constraintLeft_toRightOf="@+id/btn_clear"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded,SpUsage" />

</android.support.constraint.ConstraintLayout>
